<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="25.0dip" />
                    <solid android:color="@color/record_primary_color" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="25.0dip" />
                    <solid android:color="@color/surface_color9_normal" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_selected="false" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="25.0dip" />
                    <solid android:color="@color/surface_color10_normal" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="25.0dip" />
                    <solid android:color="@color/surface_color9_normal" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="25.0dip" />
            <solid android:color="@color/record_primary_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25.0dip" />
            <solid android:color="@color/surface_color10_normal" />
        </shape>
    </item>
</selector>